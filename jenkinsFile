pipeline {
   agent any
   environment {
      foo ="pipeline"
   }
   stages {
      stage ("local") {
        environment {
           bar = "first"
        }
         steps {
         sh 'echo "foo is $foo and bar is $bar"'
         }
      }
      stage ("global") {
         steps {
         sh 'echo "foo is $foo and bar is $bar"'
         }
      }   
   }
}
